<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE form-validation PUBLIC
"-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
"http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
    <global>
        <!-- An example global constant
        <constant>
            <constant-name>postalCode</constant-name>
            <constant-value>^\d{5}\d*$</constant-value>
        </constant>
        end example-->
    </global>
    
    <formset>
        <!-- login form valitation -->
        <form name="StrutsActionLoginForm">
            <field
                property="username"
                depends="required,mask,minlength">
                <arg0 key="login.name" resource="true"/>
                <arg1 key="${var:minlength}" resource="false" />
                <var>
                    <var-name>mask</var-name>
                    <var-value>^[0-9a-zA-Z_]*$</var-value>
                </var>
                <var>
                    <var-name>minlength</var-name>
                    <var-value>6</var-value>
                </var>
            </field>
            <field
                property="password"
                depends="required,mask,minlength">
                <arg0 key="login.password" resource="true"/>
                <arg1 key="${var:minlength}" resource="false" />
                <var>
                    <var-name>mask</var-name>
                    <var-value>^[0-9a-zA-Z]*$</var-value>
                </var>
                <var>
                    <var-name>minlength</var-name>
                    <var-value>6</var-value>
                </var>
            </field>
        </form>
        
        <!-- register form valitation -->
        <form name="StrutsActionRegisterForm">
            <field
                property="usernameR"
                depends="required,mask,minlength">
                <arg0 key="register.name" resource="true"/>
                <arg1 key="${var:minlength}" resource="false" />
                <var>
                    <var-name>mask</var-name>
                    <var-value>^[0-9a-zA-Z_]*$</var-value>
                </var>
                <var>
                    <var-name>minlength</var-name>
                    <var-value>6</var-value>
                </var>
            </field>
            <field
                property="passwordR"
                depends="required,mask,minlength">
                <arg0 key="register.password" resource="true"/>
                <arg1 key="${var:minlength}" resource="false" />
                <var>
                    <var-name>mask</var-name>
                    <var-value>^[0-9a-zA-Z]*$</var-value>
                </var>
                <var>
                    <var-name>minlength</var-name>
                    <var-value>6</var-value>
                </var>
            </field>
            <field
                property="passwordConfirm"
                depends="required,mask,minlength,validwhen">
                <arg0 key="register.passwordConfirm" resource="true"/>
                <arg1 key="${var:minlength}" resource="false" />
                <arg2 key="register.password" resource="true" />
                <var>
                    <var-name>mask</var-name>
                    <var-value>^[0-9a-zA-Z]*$</var-value>
                </var>
                <var>
                    <var-name>minlength</var-name>
                    <var-value>6</var-value>
                </var>
                <var>
                    <var-name>test</var-name>
                    <var-value>(*this* == passwordR)</var-value>
                </var>
            </field>
            <field
                property="deviceID"
                depends="required,mask,exactlength">
                <arg0 key="register.deviceID" resource="true"/>
                <arg1 key="${var:exactlength}" resource="false" />
                <var>
                    <var-name>mask</var-name>
                    <var-value>^[0-9a-zA-Z]*$</var-value>
                </var>
                <var>
                    <var-name>exactlength</var-name>
                    <var-value>12</var-value>
                </var>
            </field>
        </form>
    </formset>
    
    <!-- An example formset for another locale
    <formset language="de">

       

   </formset> -->
    
</form-validation>
